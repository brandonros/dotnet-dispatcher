{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Debug"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Key": "your-super-secret-key-with-at-least-32-characters",
    "Issuer": "https://your-domain.com",
    "Audience": "https://your-domain.com"
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:5002"
      }
    }
  },
  "ReverseProxy": {
    "Clusters": {
      "dispatcher": {
        "Destinations": {
          "dispatcher": {
            "Address": "http://localhost:5001",
            "Swaggers": [
              {
                "PrefixPath": "/dispatcher",
                "Paths": [
                  "swagger/v1/swagger.json"
                ]
              }
            ]
          }
        }
      }
    },
    "Routes": {
      "dispatcher-swagger": {
        "ClusterId": "dispatcher",
        "Match": {
          "Path": "/dispatcher/swagger/{**remainder}"
        },
        "Transforms": [
          { "PathPattern": "/swagger/{**remainder}" }
        ],
        "AuthorizationPolicy": null
      },
      "dispatcher-route": {
        "ClusterId": "dispatcher",
        "Match": {
          "Path": "/dispatcher/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/{**catch-all}" }
        ],
        "AuthorizationPolicy": "RequireAuthenticatedUser"
      }
    }
  }
}